@{
	ViewData["Title"] = "Add workout";
}

@model Workout

<div class="container d-flex justify-content-center align-items-center min-vh-100">
	<div class="card p-4" style="max-width: 500px; width: 100%;">
		<h2 class="text-center mb-4">Add Today's Workout</h2>

		<form asp-action="WorkoutForm" asp-controller="Home"  method="post">
			<div class="mb-3">
				<label asp-for="Type" class="form-label">Type:</label>
				<select asp-for="Type" class="form-select">
					<option value="Strength">Strength</option>
					<option value="Cardio">Cardio</option>
				</select>
			</div>

			<div class="mb-3">
				<label asp-for="Duration" class="form-label">Duration in min:</label>
				<input asp-for="Duration" class="form-control" type="number" />
			</div>

			<div class="mb-3">
				<label asp-for="Date" class="form-label">Date:</label>
				<input asp-for="Date" class="form-control" type="date" />
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary w-100">Add Today's Workout</button>
			</div>
		</form>
	</div>
</div>