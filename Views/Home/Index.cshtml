@model WorkoutOverviewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to your workout tracker</h1>
    <h2 class="display-6 mb-4">This month you have done <span class="fw-bold text-success">@Model.WorkoutCount</span> Workouts</h2>

    <div class="heatmap mb-4">
        @for (int i = 1; i <= Model.DaysInCurrentMonth; i++)
        {
            var date = new DateTime(DateTime.Now.Year, DateTime.Now.Month, i);
            var weekDay = date.ToString("ddd");
            <div class="heatmap-cell @(Model.WorkoutDays.Contains(i) ? "workout-day" : "")">
                <div class="weekday">@weekDay</div>
                <div class="day-number">@i</div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Workouts" class="btn btn-primary">Overview</a>
        <a asp-action="AddWorkout" class="btn btn-outline-secondary">Add workout</a>
    </div>
</div>
